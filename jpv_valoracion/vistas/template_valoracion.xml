        <div class="panel-heading"><h4><b>Monto y Tiempo de Ejecución</b></h4></div>
        <div class="panel-body">
            <table class="table table-bordered table-striped mt32">
                <thead>
                    <tr class="active">
                        <th>Fecha de Inicio</th>
                        <th>Fecha Fin</th>
                        <th>Tiempo de Duración</th>
                        <th>Monto</th>
                    </tr>
                </thead>
                <body>
                    <tr> 
                        <td>
                            <span t-field='proyecto.fecha_inicio' /></td>
                        <td>
                            <span t-field='proyecto.fecha_fin' /></td>
                        <td>
                            <span t-field='proyecto.duracion_proyec' /></td>
                        <td>
                            <span t-field='proyecto.monto_proyecto' /></td>
                    </tr>
                </body>
            </table>
            <div t-att-id="'duracion_proyecfecha_finfecha_finmonto_proyecto%s-%s' %(proyecto.id,tr_id)" mostrar='si'/>
            <div t-att-id="'fecha_finfecha_fin%s-%s' %(proyecto.id,tr_id)" mostrar='si'/>
            <div t-att-id="'fecha_inicio%s-%s' % (proyecto.id,tr_id)" mostrar='si'/>
            <div t-att-id="'fecha_fin%s-%s' % (proyecto.id,tr_id)" mostrar='si'/>
            <div t-att-id="'duracion_proyec%s-%s' % (proyecto.id,tr_id)" mostrar='si'/>
            <div t-att-id="'monto_proyecto%s-%s' % (proyecto.id,tr_id)" mostrar='si'/>
        </div>
    </div>
</template>

<template id='jpv_valoracion.calificacionInversion' name='Panel Clasificación de Inversión'>
    <div class="panel panel-default">
        <div class="panel-heading"><b>Clasificación de Inversión</b></div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-7 col-xs-7 col-md-7 col-lg-7">
                    <b><p
                        class="text-left text-muted js_labelValorar"
                        ref="categoria_id"
                        >Sector / Categoria / Subcategoria:</p></b>
                    <span t-field='proyecto.subcategoria_id' />
                </div>
                <div class="col-sm-5 col-xs-5 col-md-5 col-lg-5">
                    <div t-att-id="'categoria_idsubcategoria_idtipo_sector_id%s-%s' %(proyecto.id,tr_id)" mostrar='si' />
                <div t-att-id="'subcategoria_id%s-%s' %(proyecto.id,tr_id)" mostrar='si' />
                </div>
            </div>
        </div>
    </div>
</template>

<template id='jpv_valoracion.caracteristicasGenerales' name='Caracteristicas Generales'>
    <!--
    **************inicio de panel de Caracteristicas Generales*****************
-->
<div class="panel panel-default">
        <div class="panel-heading"><b>Caracteristicas Generales</b></div>
        <div class="panel-body">
<!--
            Inicio Proyecto de mantenimiento
-->
            <div class="row" t-if='proyecto.proyect_mantenimiento'>
             <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12" >
             <p class="text-left text-muted ">Proyecto de Mantenimiento</p>
             </div>
             </div>
<!--
    Fin de proyecto de mantenimiento
-->

<!--
            inicio obra civil
-->
            <t t-if='proyecto.obra_civil' >
            <b>
                <p class="text-left text-muted ">Obral Civil:</p></b>
                <table class="table table-bordered table-striped ">
                    <thead>
                        <tr class="active">
                            <th>Tipo de Obra</th>
                            <th>Unidad de Medición</th>
                            <th>Cantidad Estimada</th>
                        </tr>
                    </thead>
                    <body>
                        <tr>
                            <td>
                                <span t-field='proyecto.tipo_obra' /></td>
                            <td>
                                <span t-field='proyecto.unidad_medicion_obra' /></td>
                            <td>
                                <span t-field='proyecto.cantidad_estimada_obra' /></td>
                        </tr>
                    </body>
                </table>
            </t>
            <div t-att-id="'obra_civil%s-%s' %(proyecto.id,tr_id)" t-attf-mostrar="#{'si' if proyecto.obra_civil else 'no'}" />
<!--
            fin obra civil
            
            inicio adquisición de Equipos
-->
            <t t-if='proyecto.equipos' >
            <b><p class="text-left text-muted mt32">Adquisición de Equipos:</p></b>
                <table class="table table-bordered table-striped ">
                    <thead>
                        <tr class="active">
                            <th>#</th>
                            <th>Uso</th>
                            <th>Tipo</th>
                            <th>Cantidad Equipos</th>
                        </tr>
                    </thead>
                    <body>
                        <t t-set="cont" t-value="0" />

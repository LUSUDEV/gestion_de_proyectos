<?xml version="1.0"?>
<openerp>
    <data>
<template id="website_apiform" inherit_id="website.assets_frontend" name="website_apiform">
    <xpath expr="/t" position="inside">
            <script type="text/javascript" src="/jpv_valoracion/static/src/js/valoracion.js"></script>
            <script type="text/javascript" src="/jpv_valoracion/static/src/js/jpv_val_enviar.js"></script>
    </xpath>
</template>


<template id="jpv_valoracion.valoraciones" name="valorar proyectos" >
<t t-set="cont" t-value="0" />
 <t t-foreach="proyectos" t-as="proyecto">
     <t t-set="cont" t-value="cont+1" />
     <t t-set="tr_id" t-value="'c-%s' % (cont)" />
     <div class="row">
        <div class="col-sm-4 col-xs-4 col-md-4 col-lg-4" >
            <h4><b><span t-field="proyecto.correlativo"/></b></h4>
        </div>
        <div class="col-sm-7 col-xs-7 col-md-7 col-lg-7 js_val_show"
         t-att-tr_id="tr_id"
         style="cursor:pointer">
            <h4><b><span  t-field="proyecto.partner_id"/></b></h4>
                
        </div>
        <div class="col-sm-1 col-xs-1 col-md-1 col-lg-1">
             <div t-att-class="'js_val_exito%s%s' % (proyecto.id,tr_id)" style="display:none"/>
             <img src="/web/static/src/img/icons/gtk-apply.png"/>
        </div>
     </div>
     <div t-att-class="tr_id" >
    <form action="/jpv_valorar" t-att-id="'idform%s-%s' % (proyecto.id,tr_id)">
    <input type="hidden" t-att-value="tipo_valoracion" name="tipo_valoracion"/>
    <input type="hidden" t-att-value="refencia" name="refencia"/>
    <input type="hidden" t-att-value="CoordenadasData.id" name="obj_valoracion_id"/>
    <input type="hidden" t-att-value="proyecto.id" name="proyecto_id"/>
    <t t-if="tipo_valoracion in ['valoracion_coordenadas','valCoordenadasUre'] ">
        <t t-call="jpv_conf_valoracion.valoracionCoordenadas" />
        <t t-call="jpv_valoracion.datos_proyecto_coordenadas" />
    </t>
    <t t-if="tipo_valoracion=='valoracion_general'">
        <t t-call="jpv_valoracion.datos_proyecto_general" />
        <t t-call="jpv_conf_valoracion.valoracionGeneral" />
    </t>
</form>
 </div>
 </t>
</template>

<!--
template recorrer asignaciones
-->

<template id="jpv_valoracion.valorar" name="valorar proyectos" >
<!--
    recorrido de valoracion general
-->
    <t t-if='cant_general!=0'>
        <table class="table table-bordered table-striped mt32">
            <thead>
                <tr class="active">
                    <th colspan="7" >
                        <h4 align="center">
                            <b>Valoración de General</b>
                        </h4>
                    </th>
                </tr>
                <tr class="active">
                    <th>#</th>
                    <th>Codificación FCI</th>
                    <th>Nombre</th>
                    <th>Categoria</th>
                    <th ><span class="glyphicon glyphicon-wrench">...</span></th>
                </tr>
            </thead>
            <tbody>
                <t t-set="cont" t-value="0" />
                <t t-set="proyectosGen" t-value="datos_asig.proyecto_idsg" />
                
                <t t-if='editar==1'>
                <t t-set="proyectosGen" t-value="dictamen.proyecto_id" />
                </t>
                <t t-foreach="proyecto_data_gen" t-as="asignaciong">
                    <t t-set="tr_id" t-value="'g-%s' % (cont+1)" />
                    <t t-set="proyecto" t-value="asignaciong" />
                    <t t-set="valorado" t-value="proyecto.valGeneral" />
                    <t t-if="valorado==0 or editar==1">
                            <tr>
                                 <td ><a t-att-id="'a%s' % (tr_id)">G-<t t-esc="cont+1"/></a></td>
                                 <t t-set="cont" t-value="cont+1" />
                                 <td ><t t-esc="asignaciong['correlativo']"/></td>
                                 <td ><t t-esc="asignaciong['partner_id'].name"/></td>
                                 <td >
                                     <p><t t-esc="asignaciong['tipo_sector_id'].name"/></p>
                                     <t t-esc="asignaciong['categoria_id'].name"/> / 
                                     <t t-esc="asignaciong['subcategoria_id'].name"/>
                                 </td>
                                 <td ><t t-set="proyecto_id" t-value="asignaciong.id" />
                                    <t t-foreach="datos_asig.valoraciones_id" t-as="valoraciones">
                                        <t t-if="valoraciones.tipo=='general'">
                                            <t t-if="valoraciones.id==asignaciong['id']">
                                                <t t-call="jpv_valoracion.botton2" />
                                            </t>
                                            <t t-if="valoraciones.id!=asignaciong['id']">
                                                <t t-call="jpv_valoracion.botton" />
                                            </t>
                                        </t>
                                        <t t-if="valoraciones.tipo!='general'">
                                            <t t-call="jpv_valoracion.botton" />
                                        </t>
                                    </t>
                                    <t t-if="len(datos_asig.valoraciones_id)==0">
                                            <t t-call="jpv_valoracion.botton" />
                                    </t>
                                 </td>
                             </tr>
                             <tr class="active">
                            <th colspan="7"  t-att-class="'g-%s' % (cont)" style="display: none;">
                                    <form action="/jpv_valorar" t-att-id="'idform%s-%s' % (proyecto.id,tr_id)">
                                        <t t-set='tipo_valoracion' t-value="'valoracion_general'"/>
                                        <input type="hidden" value="valoracion_general" name="tipo_valoracion"/>
                                        <input type="hidden" t-att-value="ValGeneralData.id" name="obj_valoracion_id"/>
                                        <input type="hidden" t-att-value="proyecto.id" name="proyecto_id"/>
                                        <input type="hidden" t-att-value="datos_asig.id" name="asignacion_id"/>
                                        <t t-call="jpv_valoracion.datos_proyecto_general" />
                                        <t t-call="jpv_conf_valoracion.valoracionGeneral" />
                                    </form>
                            </th>
                        </tr>
                    </t>
                </t>
            </tbody>
        </table>
    </t>
<!--


    recorrido de valoracion coordenadas

    
-->
    <t t-if='cant_coordenadas>0'>
        <table class="table table-bordered table-striped mt32 " >
            <thead>
                <tr class="active">
                    <th colspan="7">
                        <h4 align="center">
                            <b>Valoración de Coordenadas</b>
                        </h4>
                    </th>
                </tr>
                <tr>
                    <th colspan="7">
                        <t t-if="cant_coordenadas>0"> 
                         <form enctype="multipart/form-data">
                            <input type="hidden" id="tipo_valoracionfile" value="valoracion_coordenadas" name="tipo_valoracion"/>
                            <input type="hidden" id="asignacion_idfile" t-att-value="datos_asig.id" name="asignacion_id"/>
                            <input type="hidden" id="obj_valoracion_idfile" t-att-value="CoordenadasData.id" name="obj_valoracion_id"/>
                              <div class="kv-avatar center-block" style="width:250px">
                                    <input  name="jpv_csv_valoracion" type="file" class="js_jpv_valoracionCsv file-loading"/>
                              </div>
                            <div id="kv-error-1" style="margin-top:10px;display:none"></div>
                            <div id="kv-success-1" class="alert alert-success fade in" style="margin-top:10px;display:none"></div>
                         </form>
                        </t>
                        <a t-att-href="url_for('/valoracion/formato/%s/' % datos_asig['id'])"> Descargar Formato </a>
                    </th>
                </tr>
                <tr class="active">
                    <th>#</th>
                    <th>Codificación FCI</th>
                    <th>Nombre</th>
                    <th>Coordenadas Este Inicio</th>
                    <th>Coordenadas Norte Inicio</th>
                    <th ><span class="glyphicon glyphicon-wrench">...</span></th>
                </tr>
            </thead>
            <tbody>
                <t t-set="cont" t-value="0" />
                <t t-set="proyectosCoor" t-value="datos_asig.proyecto_idsc" />
                <t t-if='editar==1'>
                <t t-set="proyectosCoor" t-value="dictamen.proyecto_id" />
                </t>
                <t t-foreach="proyecto_data_cor" t-as="asignacionc">
                    <t t-set="tr_id" t-value="'c-%s' % (cont+1)" />
                    <t t-set="proyecto" t-value="asignacionc" />
                    <t t-set="valorado" t-value="proyecto.valCoordenadas" />
                    <t t-if="valorado==0 or editar==1">
                        <tr>
                             <td><a t-att-id="'a%s' % (tr_id)">C-<t t-esc="cont+1"/></a></td>
                             <t t-set="cont" t-value="cont+1" />
                             <td ><t t-esc="asignacionc['correlativo']"/></td>
                             <td ><t t-esc="asignacionc['partner_id'].name"/></td>
                             <td ><t t-esc="asignacionc['coord_este']"/></td>
                             <td ><t t-esc="asignacionc['coord_norte']"/></td>
                             <td ><t t-set="proyecto_id" t-value="asignacionc.id" />
                                <t t-foreach="datos_asig.valoraciones_id" t-as="valoraciones">
                                    <t t-if="valoraciones.tipo=='coordenadas'">
                                        <t t-if="valoraciones.id==asignaciong['id']">
                                            <t t-call="jpv_valoracion.botton2" />
                                        </t>
                                        <t t-if="valoraciones.id!=asignaciong['id']">
                                            <t t-call="jpv_valoracion.botton" />
                                        </t>
                                    </t>
                                    <t t-if="valoraciones.tipo!='coordenadas'">
                                        <t t-call="jpv_valoracion.botton" />
                                        
                                    </t>
                                </t>    
                                <t t-if="len(datos_asig.valoraciones_id)==0">
                                    <t t-call="jpv_valoracion.botton" />
                                     
                                </t>
                             </td>
                         </tr>
                        <tr class="active">
                        <th colspan="7" t-att-class="'c-%s' % (cont)" style="display: none;">
                                 <form action="/jpv_valorar" t-att-id="'idform%s-%s' % (proyecto.id,tr_id)">
                                     <t t-set='tipo_valoracion' t-value="'valoracion_coordenadas'"/>
                                    <input type="hidden" value="valoracion_coordenadas" name="tipo_valoracion"/>
                                    <input type="hidden" t-att-value="CoordenadasData.id" name="obj_valoracion_id"/>
                                    <input type="hidden" t-att-value="proyecto.id" name="proyecto_id"/>
                                    <input type="hidden" t-att-value="datos_asig.id" name="asignacion_id"/>
                                    <div t-if="cont &lt;= 300">
                                    <t t-call="jpv_valoracion.datos_proyecto_coordenadas" />
                                    <t t-call="jpv_conf_valoracion.valoracionCoordenadas" />
                                    </div>
                                 </form>
                            </th>
                        </tr>
                    </t>
                </t>
            </tbody>
        </table>
    </t>

</template>


<!--
template de los botones
-->


<template id="jpv_valoracion.botton" name="botton valorar">
    <button
        type="button"
        class="btn btn-primary js_val_show"
        t-att-proyecto_id="proyecto_id"
        t-att-tr_id="tr_id"
        >Mostrar <div t-att-class="'js_val_exito%s%s' % (proyecto.id,tr_id)" style="display:none">
            <img src="/web/static/src/img/icons/gtk-apply.png"/>
        </div></button>
</template>
<template id="jpv_valoracion.bottonsmall" name="botton valorar">
    <button
        type="button"
        class="btn btn-primary js_val_show btn-sm"
        t-att-proyecto_id="proyecto_id"
        t-att-tr_id="tr_id"
        >Mostrar <div t-att-class="'js_val_exito%s%s' % (proyecto.id,tr_id)" style="display:none" >
            <img src="/web/static/src/img/icons/gtk-apply.png"/>
        </div></button>
</template>


<template id="jpv_valoracion.bottonCerrar" name="botton valoraro">
    <button
        type="button"
        class="close js_val_show"
        t-att-proyecto_id="proyecto_id"
        t-att-tr_id="tr_id"
        >X</button>
</template>


<!--

template de los datos del proyectos


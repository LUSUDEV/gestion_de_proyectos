<template id='jpv_valoracion.datosGenerales' name='Panel de Datos Generales'>
<div class="panel panel-default">
    <div class="panel-heading "><b>Datos Generales</b></div>
        <div class="panel-body">
            <div class="row">
              <div class="col-sm-7 col-xs-7 col-md-7 col-lg-7" >
                    <b><p class="text-left text-muted" >Nombre del Proyecto:</p></b>
                     <div  align="justify" t-field='proyecto.nombre_proyecto' />
                    <div t-att-id="'nombre_proyecto%s-%s' % (proyecto.id,tr_id)" mostrar='si'></div>
                    <b><p class="text-left text-muted js_labelValorar mt8" >Descripción del Proyecto:</p></b>
                        <div  align="justify" t-field='proyecto.descripcion_proyecto' />
                    <div t-att-id="'descripcion_proyecto%s-%s' % (proyecto.id,tr_id)" mostrar='si'></div>
              </div>
              <div t-att-id="'descripcion_proyectonombre_proyecto%s-%s' %(proyecto.id,tr_id)" mostrar='si' class="col-sm-5 col-xs-5 col-md-5 col-lg-5">
              </div>
            </div>
        </div>
    </div>
</template>

<template id='jpv_valoracion.montoTiempo' name='Panel Monto y Tiempo de Ejecución'>
